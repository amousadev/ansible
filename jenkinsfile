pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh '''
                rm -rf spring-framework-petclinic
                git clone https://github.com/spring-petclinic/spring-framework-petclinic.git
                cd spring-framework-petclinic
                ./mvnw
                rm -f /home/tomcat10/apache-tomcat-10.1.13/webapps/petclinic.war
                cp target/petclinic.war /home/tomcat/apache-tomcat-10.1.13/webapps/
               '''
            }
        }
    }
}
